{
"manifest_version": 3,
"name": "LiteTube Ad Block",
"description": "Blocks YouTube ads and auto-skips or mutes them.",
"version": "1.1.0",
"permissions": [
"declarativeNetRequest",
"declarativeNetRequestWithHostAccess",
"storage"
],
"host_permissions": [
"*://*.youtube.com/*",
"*://youtube.com/*",
"*://*.googlevideo.com/*",
"*://*.doubleclick.net/*",
"*://*.googlesyndication.com/*",
"*://*.g.doubleclick.net/*"
],
"content_scripts": [
  {
    "matches": ["*://*.youtube.com/*", "*://youtube.com/*"],
    "js": ["content.js"],
    "run_at": "document_start"
  }
],
"options_page": "options.html",
"icons": {
"16": "icons/adsBlock16x16.png",
"32": "icons/adsBlock32x32.png",
"48": "icons/adsBlock48x48.png",
"128": "icons/adsBlock128x128.png"
},
"action": {
"default_title": "LiteTube Ad Block"
},
"declarative_net_request": {
"rule_resources": [
{
"id": "ruleset_1",
"enabled": true,
"path": "rules/rules.json"
}
]
},
"minimum_chrome_version": "114"
}